@model AppUser
@{
    ViewData["Title"] = "ChangeStatus";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Name:@Model.Name</h4>

                <p>Email:@Model.Email</p>
                <p>User:@Model.UserName</p>

            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <a asp-action="Index" class="btn btn-dark mr-5">Go back</a>
    <form method="post">
        @if (!Model.isDelete)
        {
            <button type="submit" class="btn btn-danger">Deactivate</button>
        }
        else
        {
            <button type="submit" class="btn btn-success">Activate</button>
        }
    </form>


</div>

