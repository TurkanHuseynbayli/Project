@model ResetPasswordVM

@{
    ViewData["Title"] = "ResetPassword";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Category</h4>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>

            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label asp-for="@Model.Password">Password</label>
                    <input asp-for="@Model.Password" class="form-control" placeholder="Password">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.CheckPassword">CheckPassword</label>
                    <input asp-for="@Model.CheckPassword" class="form-control" placeholder="CheckPassword">
                    <span class="text-danger" asp-validation-for="CheckPassword"></span>
                </div>


                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <a class="btn btn-light" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>