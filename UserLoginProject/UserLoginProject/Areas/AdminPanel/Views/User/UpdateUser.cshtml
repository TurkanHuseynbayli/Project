@model AppUser
@{
    ViewData["Title"] = "UpdateUser";
}

<div class="container">
    <form method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="@Model.Name">Firstname</label>
                <input asp-for="@Model.Name" class="form-control" placeholder="Email">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.Surname">Lastname</label>
                <input asp-for="@Model.Surname" class="form-control" placeholder="Password">
                <span asp-validation-for="Surname"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="@Model.Email">Email</label>
                <input asp-for="@Model.Email" class="form-control" placeholder="Email">
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.UserName">Username</label>
                <input asp-for="@Model.UserName" class="form-control" placeholder="Username">
                <span asp-validation-for="UserName"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-outline-primary">Update</button>
        <a asp-action="Index" class="btn btn-outline-info">Close</a>
    </form>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

